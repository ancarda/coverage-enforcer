{
    "name": "ancarda/coverage-enforcer",
    "description": "Enforces a minimum Code Coverage using a Coverage Clover XML file",
    "type": "library",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ancarda\\CodeCoverage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.3|^8.0",
        "ext-simplexml": "*",
        "symfony/console": "^5.2"
    },
    "require-dev": {
        "infection/infection": "^0.21.4",
        "phpstan/phpstan": "^0.12.82",
        "phpstan/phpstan-phpunit": "^0.12.18",
        "phpstan/phpstan-strict-rules": "^0.12.9",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "analyze": "phpstan",
        "check-coverage": "bin/enforce-coverage --minStmtCov 100 var/coverage/coverage.clover.xml",
        "check-style": "phpcs",
        "check-tests": "infection",
        "fix-style": "phpcbf",
        "test": "phpunit"
    },
    "bin": [
        "bin/enforce-coverage"
    ]
}
